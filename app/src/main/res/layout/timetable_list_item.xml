<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#121212">

    <LinearLayout
        android:padding="5dp"
        android:orientation="vertical"
        android:id="@+id/timetable_viewHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="#FFEB3B"
            app:cardElevation="6dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/subjectIconHolder"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/sub_icon"
                        android:layout_width="120dp"
                        android:layout_height="80dp" />

                    <TextView
                        android:id="@+id/profName_txt"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prof.Uma"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/subjectIconHolder"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="8dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:id="@+id/subjectName_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Human Computer Interaction"/>

                    <RelativeLayout
                        android:id="@+id/timings_viewHolder"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">


                            <TextView
                                android:id="@+id/startsAt_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="09:00"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/to_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/startsAt_txt"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="to"
                                android:textColor="#413E3E"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/endsAt_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/to_text"
                                android:text="10:00"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/hour_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="8dp"
                                android:paddingBottom="8dp"
                                android:text="1st Hour"
                                android:textColor="#000"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                    </RelativeLayout>


                </LinearLayout>






            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</LinearLayout>