<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/timetable_viewHolder"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <com.google.android.material.card.MaterialCardView
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/subjectIconHolder"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/sub_icon"
                        android:layout_width="120dp"
                        android:layout_height="80dp" />

                    <TextView
                        android:id="@+id/profName_txt"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="8dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prof.Uma"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/subjectIconHolder"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#000"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:id="@+id/subjectName_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Human Computer Interaction"/>

                    <LinearLayout
                        android:id="@+id/timings_viewHolder"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/startsAt_txt"
                            android:paddingLeft="8dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_below="@id/subjectName_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"/>

                        <TextView
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" to"/>

                        <TextView
                            android:id="@+id/endsAt_txt"
                            android:paddingLeft="8dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_below="@id/subjectName_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00"/>


                    </LinearLayout>


                </LinearLayout>






                <TextView
                    android:id="@+id/hour_txt"
                    android:paddingRight="8dp"
                    android:textStyle="bold"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:text="1st Hour"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</LinearLayout>