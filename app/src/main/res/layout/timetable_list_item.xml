<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#121212">

    <LinearLayout
        android:layout_height="150dp"
        android:orientation="vertical"
        android:id="@+id/timetable_viewHolder"
        android:layout_width="match_parent"
        android:padding="10dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_height="match_parent"
            app:cardBackgroundColor="#278ea5"
            app:strokeColor="#fff"
            android:layout_width="match_parent"
            app:strokeWidth="5px">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/content_holder"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_height="match_parent"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:paddingBottom="8dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/subjectName_txt"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:text="Human Computer Interaction"/>

                    <RelativeLayout
                        android:id="@+id/timings_viewHolder"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp">


                            <TextView
                                android:id="@+id/startsAt_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="8dp"
                                android:text="09:00"
                                android:textColor="#fff"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/to_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/startsAt_txt"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="to"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/endsAt_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/to_text"
                                android:text="10:00"
                                android:textColor="#fff"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </RelativeLayout>


                        <TextView
                            android:id="@+id/hour_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:padding="5dp"
                            android:text="1st Hour"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profName_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:text="Prof.Uma"
                            android:textColor="#fff"
                            android:textSize="14sp" />



                    </RelativeLayout>


                </LinearLayout>






            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


</LinearLayout>