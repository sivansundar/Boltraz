<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".Fragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:background="#121212"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="#1F1B24"
            android:layout_centerHorizontal="true"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout

                android:padding="20dp"
                android:id="@+id/dashboard_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/profile_picture_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/baseline_account_circle_black_48"
                    app:civ_border_color="#EEEEEE"
                    app:civ_shadow_color="#8BC34A" />

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="100dp">


                    <TextView
                        android:id="@+id/good_day_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Hello,"
                        android:textColor="#fff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/good_day_text"
                        android:text="Sivan Chakravarthy"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/usn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_name"
                        android:text="1NH16CSXXX"
                        android:textColor="#fff" />

                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:text="Logout"/>
            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>


</FrameLayout>