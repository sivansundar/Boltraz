<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".Fragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:background="#121212"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_height="400dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:scaleType="centerCrop">


        </ImageView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="295dp"
            app:cardBackgroundColor="#484848"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:id="@+id/holder"
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:background="#484848">


                <RelativeLayout
                    android:id="@+id/userDetails_holder"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#484848">


                    <TextView
                        android:textColor="#fff"
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sivan Chakravarthy"
                        android:layout_centerHorizontal="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:text="1NH16CSXXX â€¢ CSE"
                        android:id="@+id/usn_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_name"
                        android:textColor="#ddd" />

                    <RelativeLayout

                        android:id="@+id/dashboard_holder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">


                        <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userDetails_holder">

                </RelativeLayout>
-->
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/userDetails_holder"
                    android:background="#484848">


                </RelativeLayout>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:layout_alignParentBottom="true"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:text="Logout"/>
            </RelativeLayout>




    </RelativeLayout>


</FrameLayout>